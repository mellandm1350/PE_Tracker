                        <button class="equipment-managment-btn" onclick="TODO">Equip. Mgmt.</button>
                        <button class="organization-btn" onclick="TODO">Organization</button>
                        <button class="behavior-btn" onclick="TODO">Behavior Mgmt.</button>
                        <button class="other-tasks-btn" onclick="TODO">Other Tasks</button>
                    </div>

                </div>

                <div class="inner-right">

                    <div class="time" style="border: 1px solid black;">
                        <h3>Time</h3>

                        <input type="text" id="plannedTime" name="plannedTime">
