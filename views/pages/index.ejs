                        <br>
                        <input type="text" class="equipmentPercent" name="equipmentPercent">
                        <br>
                        <input type="text" class="organizationPercent" name="organizationPercent">
                        <br>
                        <input type="text" class="behaviorPercent" name="behaviorPercent">
                        <br>
                        <input type="text" class="otherTasksPercent" name="otherTasksPercent">

                    </div>

                    <div class="num" style="border: 1px solid black;">
                        <h3>#</h3>
                        <input type="text" class="warmUpAndReviewNum" name="warmUpAndReviewNum">
                        <br><br>
                        <input type="text" id="skillLearningNum" name="skillLearningNum">
                        <br><br>

                        <div class="skill-learning">
                            <input type="text" id="learningEngagedNum" name="learningEngagedPercent">
                            <input type="text" id="learningNonEngagedNum" name="learningNonEngagedPercent">
                            <input type="text" id="learningOtherNum" name="learningOtherPercent">
